# FleshRecord 环境变量配置模板
# 请复制此文件为 .env 并填入实际值

# Firefly III API配置 (全局公用)
FIREFLY_API_URL=http://localhost:8080/api/v1

# Dify API配置 (全局公用)
DIFY_API_URL=https://api.dify.ai/v1
# 用户特定的API_KEY请在 data/users/<user_id>.json 中的 dify_config.api_key 配置

# 用户特定配置请通过 data/users/<user_id>.json 文件设置
# 详细说明参见 MULTI_USER_GUIDE.md

# Flask 应用配置
FLASK_ENV=development
DEBUG=true
SECRET_KEY=your_flask_secret_key

# 速率限制配置
RATE_LIMIT_STORAGE_URI=memory://
RATE_LIMIT_DEFAULT=100 per hour

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=log/file.log

# 服务器配置
HOST=0.0.0.0
PORT=9012