# FleshRecord 环境变量配置模板
# 请复制此文件为 .env 并填入实际值

# Firefly III API 配置
FIREFLY_API_URL=https://your-firefly-instance.com/api/v1
FIREFLY_ACCESS_TOKEN=your_personal_access_token_here

# Webhook 配置
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_SECRET_UPDATE=your_webhook_secret_update_key
WEBHOOK_URL=your_webhook_notification_url

# Flask 应用配置
FLASK_ENV=development
DEBUG=true
SECRET_KEY=your_flask_secret_key

# 速率限制配置
RATE_LIMIT_STORAGE_URI=memory://
RATE_LIMIT_DEFAULT=100 per hour

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=log/file.log

# 服务器配置
HOST=0.0.0.0
PORT=9012